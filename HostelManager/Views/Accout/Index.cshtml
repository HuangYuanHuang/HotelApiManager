@model HostelModel.AccoutModel
@addTagHelper "WebDirectiveExpand.Controls.GridBuilder,WebDirectiveExpand"
@{
    Layout = "_MainPage";
    ViewData["Title"] = "账号管理";
}
<crud-form asp-for="@Model" asp-url="@Url.Content("~/Accout")" asp-icon="mif-users place-right" asp-title="账号列表" ng-controller="mainController" asp-form-double="false">

</crud-form>
@section Scripts{

    <script type="text/javascript">
        angular.module("app", ["ngBaseGrid", "ngSelect"]).controller("mainController", function ($scope, BaseGrid) {
            $scope.Model = BaseGrid;
        })
        $("#accout_config").addClass("active");
    </script>
}
@model HostelModel.HotelModel
@addTagHelper "WebDirectiveExpand.Controls.GridBuilder,WebDirectiveExpand"
@{
    Layout = "_MainPage";
    ViewData["Title"] = "酒店管理";
}
<crud-form asp-for="@Model" asp-url="@Url.Content("~/Hotel")" asp-icon="mif-users place-right" asp-title="酒店列表" ng-controller="mainController" asp-form-double="false">

</crud-form>
@section Scripts{

    <script type="text/javascript">
        angular.module("app", ["ngBaseGrid","ngSelect"]).controller("mainController", function ($scope, BaseGrid) {
            $scope.Model = BaseGrid;
        })
        $("#basic_config").addClass("active");
    </script>
}
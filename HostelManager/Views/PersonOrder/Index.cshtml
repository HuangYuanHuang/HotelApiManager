@model HostelModel.PersonOrderModel
@addTagHelper "WebDirectiveExpand.Controls.GridBuilder,WebDirectiveExpand"
@{
    Layout = "_MainPage";
    ViewData["Title"] = "酒店用工申请管理";
}
<crud-form asp-for="@Model" asp-url="@Url.Content("~/PersonOrder")" asp-icon="mif-users place-right" asp-title="用工申请列表" ng-controller="mainController" asp-form-double="false">

</crud-form>
@section Scripts{

    <script type="text/javascript">
        angular.module("app", ["ngBaseGrid","ngSelect"]).controller("mainController", function ($scope, BaseGrid) {
            $scope.Model = BaseGrid;
        })
        $("#person_order").addClass("active");
    </script>
}
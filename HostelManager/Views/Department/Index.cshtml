@model HostelModel.DepartmentModel
@addTagHelper "WebDirectiveExpand.Controls.GridBuilder,WebDirectiveExpand"
@{
    Layout = "_MainPage";
    ViewData["Title"] = "部门管理";
}
<crud-form asp-for="@Model" asp-url="@Url.Content("~/Department")" asp-icon="mif-users place-right" asp-title="部门列表" ng-controller="mainController" asp-form-double="false">

</crud-form>
@section Scripts{

    <script type="text/javascript">
        angular.module("app", ["ngBaseGrid", "ngSelect"]).controller("mainController", function ($scope, BaseGrid) {
            $scope.Model = BaseGrid;
        })
        $("#department").addClass("active");
    </script>
}